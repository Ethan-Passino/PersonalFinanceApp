<Page x:Class="PersonalFinanceApp.Views.BudgetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BudgetsPage">
    <Grid Background="#1E1E1E" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Page Title -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Add Budget Section -->
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Budgets" Foreground="White" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Summary Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <StackPanel Margin="20">
                <TextBlock Text="Total Budget Allocated" Foreground="White" FontSize="16" FontWeight="Bold" />
                <TextBlock x:Name="TotalBudgetText" Text="$0.00" Foreground="LightGreen" FontSize="24" />
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <StackPanel>
                <TextBlock Text="Manage Your Budgets" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                <DataGrid x:Name="BudgetsGrid" AutoGenerateColumns="False" Background="#333333" Foreground="White"
                          BorderBrush="Gray" GridLinesVisibility="Horizontal" RowBackground="#444444" 
                          AlternatingRowBackground="#383838" ScrollViewer.VerticalScrollBarVisibility="Auto"
                          CellEditEnding="BudgetsGrid_CellEditEnding" LoadingRow="BudgetsGrid_LoadingRow" CanUserAddRows="False">
                    <DataGrid.Resources>
                        <!-- Header Style -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Black" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="BorderBrush" Value="Gray" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridComboBoxColumn Header="Category" SelectedValueBinding="{Binding Category}" Width="2*"
                                                ItemsSource="{StaticResource PredefinedCategories}" />
                        <DataGridTextColumn Header="Budget Amount" Binding="{Binding Amount}" Width="1.5*" />
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteBudgetCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}" Background="Red" Foreground="White" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Add Budget Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <ComboBox x:Name="CategoryPicker" Width="200" Margin="10" 
                      ItemsSource="{StaticResource PredefinedCategories}" SelectedIndex="0" 
                      Foreground="Black" Background="White" />
            <TextBox x:Name="BudgetAmountInput" Width="100" Margin="10" />
            <Button Content="Add Budget" Width="150" Margin="10" 
                    Style="{StaticResource DarkThemeButton}" Click="AddBudget_Click" />
        </StackPanel>
    </Grid>
</Page>
